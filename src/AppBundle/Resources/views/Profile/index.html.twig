{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>{{ 'app.entity.profile.id.label'|trans }}</th>
                <th>{{ 'app.entity.profile_extended.id.label'|trans }}</th>
                <th>{{ 'app.entity.profile.name.label'|trans }}</th>
                <th>{{ 'app.entity.profile.surname.label'|trans }}</th>
                <th>{{ 'app.html.matches'|trans }}</th>
                <th>{{ 'app.html.show'|trans }}</th>
                <th>{{ 'app.html.edit'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            <tr><td colspan=7 class="text-center"><a href="{{ path('profile_new') }}" class="btn btn-default">{{ 'app.html.new'|trans }}</a></td></tr>

            {% for entry in data %}
                <tr>
                    <td>{{ entry.profile.id }}</td>
                    <td>{{ entry.profile.profileExtended.id }}</td>
                    <td>{{ entry.profile.name }}</td>
                    <td>{{ entry.profile.surname }}</td>
                    <td>{{ entry.count }}</td>
                    <td class="text-center">
                        <a href="{{ path('profile_show', {id: entry.id}) }}">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('profile_edit', {id: entry.id}) }}">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('profile_data_csv') }}" target="_blank" class="btn btn-default">{{ 'app.html.export'|trans }}</a>
{% endblock %}
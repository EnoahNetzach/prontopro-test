{% extends '::base.html.twig' %}

{% block title %}{{ 'app.html.layout.title'|trans }}{% endblock %}

{% block stylesheets %}

    {% stylesheets filter='cssrewrite'
        'lib/bootstrap/css/bootstrap.min.css'
        'lib/css/font-awesome.min.css'
        'bundles/app/css/main.css'
    %}
        <link rel='stylesheet' type='text/css' href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block initial_javascripts %}
    {% javascripts
        'lib/js/modernizr.min.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        'lib/bootstrap/js/bootstrap.min.js'
        'bundles/app/js/main.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block main %}
    <div class="container">
        <ol class="breadcrumb">
            {% block breadcrumb %}
                <li><a href="{{ path('profile_index') }}">{{ 'app.html.breadcrumb.index'|trans }}</a></li>
            {% endblock %}
        </ol>

        <div id="alerts">
            {% block flashes %}
                {% for type, messages in app.session.flashBag.all %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }}">
                            {{ message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}
        </div>

        {% block body %}{% endblock %}
    </div>
{% endblock %}